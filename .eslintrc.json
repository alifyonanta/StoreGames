{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "jsx-a11y/label-has-associated-control": "off",
        "import/extensions": ["error", "ignorePackages", { 
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
        }]
    },
    "settings": {
        "import/extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
        ],
        "import/resolver": {
            "node": {
                "extenstions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
